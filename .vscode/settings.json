{
    "editor.rulers": [
        88
    ],
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.flake8Args": [
        "--max-line-length",
        "88",
        "--ignore=E203,W503,W504",
        "--docstring-style=google",
        "--strictness=full",
    ],
    "python.linting.flake8CategorySeverity.D": "Warning",
    "python.analysis.typeCheckingMode": "basic",
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        ".venv/**/*.py",
        ".pytest_cache/**/*.py"
    ],
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "commit-message-editor.staticTemplate": [
        "コミット種別: 要約",
        "",
        "本文",
    ],
    "commit-message-editor.dynamicTemplate": [
        "{type}{description}",
        "",
        "{body}",
    ],
    "commit-message-editor.tokens": [
        {
            "label": "Type",
            "name": "type",
            "type": "enum",
            "options": [
                {
                    "label": "",
                    "value": ""
                },
                {
                    "label": "バグ修正 (fix)",
                    "value": "fix: ",
                },
                {
                    "label": "クリティカルなバグ修正 (hotfix)",
                    "value": "hotfix: "
                },
                {
                    "label": "新規 ファイル/機能追加 (add)",
                    "value": "add: "
                },
                {
                    "label": "機能修正（バグではない） (update)",
                    "value": "update: "
                },
                {
                    "label": "仕様変更 (change)",
                    "value": "change: "
                },
                {
                    "label": "仕様に影響がないコード改善(リファクタ) (refactor)",
                    "value": "refactor: "
                },
                {
                    "label": "無効化（コメントアウト等） (disable)",
                    "value": "disable: "
                },
                {
                    "label": "削除（ファイル）(remove)",
                    "value": "remove: "
                },
                {
                    "label": "バージョンアップ (update)",
                    "value": "upgrade: "
                },
                {
                    "label": "テスト関連 (test)",
                    "value": "test: "
                },
                {
                    "label": "変更取り消し (revert)",
                    "value": "revert: "
                },
            ]
        },
        {
            "label": "短い要約",
            "name": "description",
            "type": "text",
            "multiline": false
        },
        {
            "label": "本文",
            "name": "body",
            "type": "text",
            "multiline": true,
            "lines": 5,
            "maxLines": 10
        },
    ],
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests",
        "--doctest-modules",
        "my_package"
    ]
}